@model Login
<h1>Iniciar sesion</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-action="IniciarSesion" method="post">
            <div class="container">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contrasenia">Contraseña</label>
                    <input asp-for="Contrasenia" class="form-control"/>
                    <span asp-validation-for="Contrasenia" class="text-danger"></span>
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Iniciar sesion</button>
                @if(ViewData["Mensaje"] != null)
                {
                    <div class="form-group">
                        <div class="alert alert-danger" role="alert">
                            @ViewData["Mensaje"]
                        </div>
                    </div>
                }
                ¿No tienes una cuenta? <a href="@Url.Action("Registro","Usuario")">Registrate!</a>
            </div>
        </form>
    </div>
</div>