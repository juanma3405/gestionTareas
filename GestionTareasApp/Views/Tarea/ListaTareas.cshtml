@using GestionTareasApp.Models;
@model List<Tarea>

 
<div class="container">
    <h1>Listado de tareas:</h1>
    <form method="post">
        <ol class="list-group list-group-numbered">
            @foreach (var tarea in Model)
            {
                <li  class="list-group-item d-flex justify-content-between align-items-start">@tarea.Titulo
                    <button asp-action="EliminarTarea" asp-route-id="@tarea.IdTarea" class="btn btn-danger"> Eliminar tarea</button>
                    <button asp-action="CompletarTarea" asp-route-id="@tarea.IdTarea" class="btn btn-success"> Marcar como completada</button>
                 </li> 
            }
        </ol>
    </form>
    <br/>
    <div>
        <form asp-action="Crear" method="get" >
            <button type="submit" class="btn btn-primary">Crear Nueva Tarea</button>
        </form>   
    </div>
</div>

